<select name="add-item" id="add-item-input">
    <option value="1001">Treven Getta Patent Pump</option>
    <option value="dr-1001">Embellished Striped Dress</option>
    <option value="dr-1002">Drop Waist Ruffle Dress</option>
</select>
<input type="number" id="item-quantity" value=1>
